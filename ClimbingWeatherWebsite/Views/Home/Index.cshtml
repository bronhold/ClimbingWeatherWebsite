    <style>
    
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 0;

        }
        .header {
            padding: 60px;
            text-align: center;
            background: #1abc9c;
            color: white;
            font-size: 4rem;
        }

        header h1 {
            
        }
        
